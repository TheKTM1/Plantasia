<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plantasia</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> //default bootstrap*@
    <link rel="stylesheet" href="~/css/bootstrap_theme.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Plantasia.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="text-shadow:1px 1px #FFF">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="margin-top:auto">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Plantasia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial"/>
            </div>
        </nav>
    </header>

    <div class="container d-inline-flex">

        <div class="container w-25 bg-black" style="text-align:center">
            <div>
                <h4 class="d-block">Gracz</h4>
                <a class="d-block">Profil</a>
                <a class="d-block">Ustawienia</a>
                <a class="d-block">Znajomi</a>
                <a class="d-block">Shoutbox</a>
                <a class="d-block">Poczta</a>
            </div>
            <div>
                <h4 class="d-block">Hodowla</h4>
                <a class="d-block">Przegląd</a>
                <a class="d-block">Rynek</a>
                <a class="d-block">Bank</a>
            </div>
            <div>
                <h4 class="d-block">Eksploracja</h4>
                <a class="d-block">Wyprawa</a>
                <a class="d-block">Pojedynek</a>
                <a class="d-block">Historia walk</a>
            </div>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Plantasia - Grupa Kekw - <a asp-area="" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> //default bootstrap*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
